<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tablo Oluşturma</title>
</head>
<body>
  <h1>Ürün Listesi</h1>

  <table border="1">
    <thead>
      <tr>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach((product) => { %>
        <tr>
          <td><%= product.urun_adi %></td>
          <td><%= product.urun_fiyati %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
